[flake8]
# Set maximum line length to 100 (matching pylint)
max-line-length = 100

# Ignore specific error codes
ignore =
    E203,  # whitespace before ':' (conflicts with Black)
    W503,  # line break before binary operator (outdated)
    E501,  # line too long (we set max-line-length instead)

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    node_modules,
    chroma_db

# Per-file ignores (if needed)
per-file-ignores =
    __init__.py:F401

# Maximum complexity
max-complexity = 10
